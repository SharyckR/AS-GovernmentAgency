# Usa la imagen base oficial de Python
FROM python:latest

# Establece el directorio de trabajo en /app
WORKDIR /app

RUN mkdir -p /app/routers

# Copia el archivo de requisitos al directorio de trabajo
COPY requirements.txt .

# Instala las dependencias
RUN pip install -r requirements.txt

# Copia el contenido actual del directorio al directorio de trabajo
COPY /logic/ /app/logics/
COPY /middlewares/ /app/middlewares/
COPY /test/ /app/test/
COPY /venv/ /app/venv/
COPY /app.py /app/
COPY /README.md /app/
COPY /requirements.txt /app/
COPY /controller/ /app/controller/

# Especifica el comando que se ejecutar√° cuando se inicie el contenedor
CMD [ "python", "app.py" ]
